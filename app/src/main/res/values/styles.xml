<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RobotScouter" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RobotScouter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RobotScouter.NoActionBar.TransparentStatusBar"/>

    <style name="RobotScouter.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="RobotScouter.Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RobotScouter.Text.HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="RobotScouter.Text.ErrorText">
        <item name="android:textColor">@color/errorColor</item>
    </style>

    <style name="RobotScouter.Tutorial">
        <item name="backgroundColour">@color/colorPrimary</item>
    </style>

    <style name="RobotScouter.Tutorial.Menu" parent="RobotScouter.Tutorial">
        <item name="focalColour">@color/colorAccent</item>
    </style>

    <style name="RobotScouter.Tutorial.NoContentHint">
        <item name="android:id">@id/no_content_hint</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTop">@drawable/ic_memory_grey_48dp</item>
        <item name="android:textColor">#9B9B9B</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="RobotScouter.CardList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/card_padding_horizontal_small</item>
        <item name="android:layout_marginRight">@dimen/card_padding_horizontal_small</item>
        <item name="android:paddingBottom">@dimen/card_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/card_padding_horizontal_small</item>
        <item name="android:paddingRight">@dimen/card_padding_horizontal_small</item>
        <item name="android:paddingTop">@dimen/card_padding_vertical</item>
    </style>

    <style name="RobotScouter.CardList.Metric">
        <item name="android:layout_marginLeft">@dimen/card_padding_horizontal</item>
        <item name="android:layout_marginRight">@dimen/card_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/card_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/card_padding_horizontal</item>
    </style>

    <style name="RobotScouter.Fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fab_colorNormal">@color/colorPrimary</item>
        <item name="fab_colorPressed">@color/colorPrimary</item>
        <item name="fab_colorRipple">@color/colorPrimary</item>
    </style>

    <style name="RobotScouter.Fab.Metric">
        <item name="fab_size">mini</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RobotScouter" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RobotScouter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RobotScouter.NoActionBar.TransparentStatusBar" />

    <style name="RobotScouter.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="RobotScouter.Text">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="RobotScouter.Dialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingLeft">@dimen/spacing_large</item>
        <item name="android:paddingRight">@dimen/spacing_large</item>
        <item name="android:paddingTop">@dimen/spacing_dialog_layout</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
    </style>

    <style name="RobotScouter.Tutorial">
        <item name="backgroundColour">@color/colorPrimary</item>
    </style>

    <style name="RobotScouter.Tutorial.Menu" parent="RobotScouter.Tutorial">
        <item name="focalColour">@color/colorAccent</item>
    </style>

    <style name="RobotScouter.Tutorial.NoContentHint">
        <item name="android:id">@id/no_content_hint</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="drawableTopCompat">@drawable/ic_memory_grey_48dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/light_grey_text</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="RobotScouter.List">
        <item name="android:id">@id/list</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="RobotScouter.List.Scouting">
        <item name="android:paddingLeft">@dimen/list_item_padding_horizontal_scout</item>
        <item name="android:paddingRight">@dimen/list_item_padding_horizontal_scout</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical_scout</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical_scout</item>
    </style>

    <style name="RobotScouter.ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical_within</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical_within</item>
    </style>

    <style name="RobotScouter.MainListItemView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="RobotScouter.Fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fab_colorNormal">@color/colorPrimary</item>
        <item name="fab_colorPressed">@color/colorPrimary</item>
        <item name="fab_colorRipple">@color/colorPrimary</item>
    </style>

    <style name="RobotScouter.Fab.Metric">
        <item name="fab_size">mini</item>
    </style>

</resources>

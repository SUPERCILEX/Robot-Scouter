<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="8dp"
    android:paddingStart="8dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/name_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/team_name"
        app:errorTextAppearance="@style/RobotScouter.Text.ErrorText"
        app:hintTextAppearance="@style/RobotScouter.Text.HintText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/name"
            style="@style/RobotScouter.Text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textCapWords"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/media_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/team_media_hint"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:errorTextAppearance="@style/RobotScouter.Text.ErrorText"
        app:hintTextAppearance="@style/RobotScouter.Text.HintText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_layout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/media"
            style="@style/RobotScouter.Text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/ic_add_a_photo_black_24dp"
            android:drawableRight="@drawable/ic_add_a_photo_black_24dp"
            android:inputType="textUri"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/website_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/team_website"
        app:errorTextAppearance="@style/RobotScouter.Text.ErrorText"
        app:hintTextAppearance="@style/RobotScouter.Text.HintText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/media_layout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/website"
            style="@style/RobotScouter.Text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textUri"/>

    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>

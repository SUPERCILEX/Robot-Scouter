<resources>

    <style name="RobotScouter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="RobotScouter.NoActionBar.TransparentStatusBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="RobotScouter.Metric">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/card_padding_horizontal</item>
        <item name="android:layout_marginStart">@dimen/card_padding_horizontal</item>
        <item name="android:background">@drawable/list_divider</item>
        <item name="android:elevation">2dp</item>
        <item name="android:paddingBottom">@dimen/card_padding_vertical</item>
        <item name="android:paddingEnd">@dimen/card_padding_horizontal</item>
        <item name="android:paddingStart">@dimen/card_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/card_padding_vertical</item>
    </style>

</resources>
